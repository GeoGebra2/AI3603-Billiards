{
  "meta": {
    "desc": "MCTS agent full configuration template. Edit values as needed before using in training or evaluation.",
    "created_by": "assistant",
    "date": "2025-12-27"
  },
  "mcts_iterations": 30,
  "c_puct": 1.25,
  "max_candidates": 12,
  "rollout_sample_size": 6,
  "expansion_per_node": 4,
  "decision_timeout": 8.0,

  "candidate_generation": {
    "k_targets": 2,
    "v_factors": [0.88, 1.0, 1.12],
    "k_v": 1.8,
    "c_v": 0.8,
    "ref_d": 1.0,
    "alpha_dphi": 6.0,
    "max_dphi": 12.0,
    "base_offsets": [0.0, 0.01, -0.01],
    "offset_scale_mode": "distance_based",
    "max_candidates_per_target": 12
  },

  "robustness": {
    "robust_samples": 2,
    "robust_noise_std": {
      "V0": 0.08,
      "phi": 0.06,
      "theta": 0.04,
      "a": 0.002,
      "b": 0.002
    }
  },

  "future_and_risk": {
    "lambda_future": 0.35,
    "risk_penalty_coeff": 200.0
  },

  "debug_and_logging": {
    "enable_debug": false,
    "save_rollouts": false,
    "log_dir": "train/runs/mcts",
    "save_results_json": "eval/config_results.json"
  },

  "reproducibility": {
    "random_seed": 42,
    "deterministic": true
  }
}
